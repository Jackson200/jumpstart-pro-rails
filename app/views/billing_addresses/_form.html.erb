<%= form_with(model: billing_address, url: billing_address_url) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <h5 class="mb-2"><%= t("subscriptions.billing_address.billing_address") %></h5>

  <div class="mb-1">
    <%= form.label :line1, "Address line 1" %>
    <%= form.text_field :line1, class: "form-control" %>
  </div>

  <div class="mb-1">
    <%= form.label :line2, "Address line 2" %>
    <%= form.text_field :line2, class: "form-control" %>
  </div>

  <div class="mb-1">
    <%= form.label :city %>
    <%= form.text_field :city, class: "form-control" %>
  </div>

  <div class="mb-1">
    <%= form.label :state, "State/Province" %>
    <%= form.text_field :state, class: "form-control" %>
  </div>

  <div class="mb-1">
    <%= form.label :postal_code %>
    <%= form.text_field :postal_code, class: "form-control" %>
  </div>

  <div class="mb-1">
    <%= form.label :country %>
    <%= form.country_select :country, include_blank: true %>
  </div>

  <div class="flex justify-between mt-4">
    <%= form.button class: "btn btn-primary" %>
  </div>
<% end %>
